/* Copied and adapted from home/index.wxss */
.step-content {
  /* padding handled by parent usually, but let's keep it flexible */
}

.input-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.input-wrapper {
  flex: 1;
  background: #f7f8fa;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.input-wrapper:focus-within {
  background: #fff;
  border-color: #FA8C16;
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.1);
}

.add-btn-mini {
  width: 96rpx;
  height: 96rpx;
  background: #FA8C16;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(250, 140, 22, 0.2);
  flex-shrink: 0;
}
.add-btn-mini:active {
  transform: scale(0.95);
}

.custom-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}
.placeholder-style {
  color: #bbb;
}

.basket-section {
  margin-bottom: 40rpx;
}
.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  font-weight: 500;
}
.basket-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.basket-tag {
  background: #FA8C16;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}
@keyframes popIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* --- Basket Trigger --- */
.basket-trigger {
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  background: #fff4e6;
  color: #FA8C16;
  border: 2rpx dashed #FA8C16;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  font-weight: bold;
}
.basket-trigger:active {
  opacity: 0.7;
  transform: scale(0.98);
}

/* --- Action Area --- */
.action-area {
  margin-top: 60rpx;
}
.generate-btn {
  background: linear-gradient(135deg, #FF7D00 0%, #FA8C16 100%);
  color: #fff;
  border-radius: 50rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(250, 140, 22, 0.4);
  border: none;
  width: 100%;
}
.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}
.fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}


/* --- Popup Styles --- */
.popup-container {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
  height: 70vh; /* Half screen height or more */
  display: flex;
  flex-direction: column;
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
  flex-shrink: 0;
}

.category-container {
  flex: 1;
  display: flex;
  overflow: hidden; /* Important for inner scroll */
  background: #f9f9f9;
}

.category-sidebar {
  width: 180rpx;
  background: #f0f2f5;
  height: 100%;
}

.cat-tab {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  border-left: 6rpx solid transparent;
  transition: all 0.2s;
}

.cat-tab.active {
  background: #fff;
  color: #FA8C16;
  font-weight: bold;
  border-left-color: #FA8C16;
}

.category-content {
  flex: 1;
  background: #fff;
  padding: 24rpx;
  height: 100%;
  box-sizing: border-box;
}

.ing-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.ing-item {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
}

.ing-item:active {
  transform: scale(0.98);
}

.ing-item.selected {
  background: #fff4e6;
  color: #FA8C16;
  border-color: #FA8C16;
  font-weight: bold;
}
