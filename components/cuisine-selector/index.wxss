/* Copied and adapted from home/index.wxss */
.step-content {
}

.cuisine-section {
  padding-bottom: 20rpx;
  overflow: hidden; /* Prevent scroll overflow during swipe */
}

.section-title-cuisine {
  font-size: 32rpx;
  font-weight: 800;
  color: #333;
  margin: 40rpx 0 40rpx;
  padding-left: 8rpx;
  border-left: 8rpx solid #FA8C16;
  line-height: 1;
}

/* --- Stack Container --- */
.card-stack-container {
  position: relative;
  width: 100%;
  height: 800rpx; /* Tall enough for the cards */
  display: flex;
  justify-content: center;
  /* Perspective for 3D feel if supported, but flat stack is safer */
  perspective: 1000px;
  padding-top: 40rpx; /* Add some padding top to avoid clipping */
}

/* --- Stack Card --- */
.stack-card {
  position: absolute;
  top: 40rpx; /* Move down slightly */
  /* Centered horizontally */
  left: 50%; 
  margin-left: -260rpx; /* Half of width */
  width: 520rpx; /* Slightly smaller width */
  height: 680rpx; /* Slightly smaller height */
  
  background: #fff;
  border-radius: 40rpx;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
  box-shadow: 0 12rpx 48rpx rgba(0,0,0,0.08);
  border: 2rpx solid #fff;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  
  /* Transition is handled by JS during drag, but we need it for reset */
  /* transition: transform 0.3s ease; We will manage this in JS or conditionally */
  transform-origin: center bottom;
  will-change: transform, opacity;
}

.stack-card.is-active {
  /* Active styling enhancements */
  border-color: #FA8C16;
  background: linear-gradient(to bottom, #fff, #fffbf5);
}

/* --- Content Styles --- */
.chef-avatar {
  font-size: 140rpx;
  margin-bottom: 40rpx;
  margin-top: 40rpx;
  filter: drop-shadow(0 8rpx 16rpx rgba(0,0,0,0.1));
}

.chef-info {
  text-align: center;
  width: 100%;
}

.chef-name {
  font-size: 44rpx;
  font-weight: 800;
  color: #333;
  margin-bottom: 20rpx;
}

.chef-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.6;
  padding: 0 20rpx;
  
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.chef-specialty {
  font-size: 26rpx;
  color: #FA8C16;
  background: rgba(250, 140, 22, 0.1);
  padding: 12rpx 30rpx;
  border-radius: 100rpx;
  display: inline-block;
  font-weight: 600;
}

.select-indicator {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: #FA8C16;
  border-radius: 50%;
  padding: 8rpx;
  display: flex;
}

/* Buttons Area */
.action-area {
  margin-top: 20rpx;
  padding-bottom: 40rpx;
}

.btn-group {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  gap: 30rpx;
}

.generate-btn {
  flex: 1;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  transition: all 0.2s;
  margin: 0; /* Reset default button margin */
}

.generate-btn::after {
  border: none;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
  flex: 0.4; /* Smaller width for "Previous" */
}

.btn-primary {
  background: linear-gradient(135deg, #FA8C16 0%, #FFBB50 100%);
  color: #fff;
  box-shadow: 0 8rpx 24rpx rgba(250, 140, 22, 0.3);
  flex: 0.6; /* Larger width for "Generate" */
}

.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}
