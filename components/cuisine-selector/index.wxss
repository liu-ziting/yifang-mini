/* Copied and adapted from home/index.wxss */
.step-content {
}

.cuisine-section {
  padding-bottom: 20rpx;
}

.section-title-cuisine {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
}

.cuisine-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding-bottom: 20rpx;
}

.cuisine-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 24rpx;
  transition: all 0.2s;
  box-sizing: border-box;
}

.cuisine-grid .cuisine-item {
  width: calc(25% - 15rpx); /* 4 items per row */
  margin-right: 0;
}

.cuisine-item.active {
  background: #fff7e6; /* 浅橙色背景 */
  border-color: #FA8C16;
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(250, 140, 22, 0.2);
}

.cuisine-emoji {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}
.cuisine-name {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}
.cuisine-item.active .cuisine-name {
  color: #FA8C16;
  font-weight: bold;
}

.action-area {
  margin-top: 60rpx;
}
.btn-group {
  display: flex;
  gap: 24rpx;
}

.generate-btn {
  background: linear-gradient(135deg, #FF7D00 0%, #FA8C16 100%);
  color: #fff;
  border-radius: 50rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(250, 140, 22, 0.4);
  border: none;
  width: 100%;
}

.btn-secondary {
  background: #f2f3f5;
  color: #666;
  box-shadow: none;
  border: 2rpx solid #e8e8e8;
  flex: 1;
}

.btn-primary {
  flex: 2;
}

.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}
.fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}
