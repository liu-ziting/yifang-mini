page {
  background: #fff;
}

/* --- Loading 蒙层 --- */
.loading-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: #fff;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading-content {
  text-align: center;
}
.loading-text {
  margin-top: 32rpx;
  font-size: 30rpx;
  color: #555;
  font-weight: 500;
  letter-spacing: 2rpx;
}
.custom-loading-icon {
  color: #FA8C16 !important; /* TDesign loading 颜色覆盖 */
}

/* --- 结果页 --- */
.recipe-header {
  position: relative;
  height: 500rpx;
}
.recipe-img {
  width: 100%;
  height: 100%;
}
.img-loading-mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 5;
  backdrop-filter: blur(2px);
  color: #fff; /* 确保文字颜色为白色 */
}
.back-btn {
  position: absolute;
  left: 32rpx;
  width: 64rpx;
  height: 64rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
  backdrop-filter: blur(10px);
  z-index: 10;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recipe-header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 32rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
  box-sizing: border-box;
}
.recipe-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}
.r-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(5px);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.recipe-body {
  padding: 40rpx 32rpx;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx; /* 稍微向上覆盖一点 */
  background: #fff;
  position: relative;
}

/* 仪表盘 */
.dashboard {
  display: flex;
  justify-content: space-around;
  background: #fffbf2;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #ffe8cc;
}
.dash-item {
  text-align: center;
}
.dash-val {
  font-size: 36rpx;
  font-weight: bold;
  color: #FA8C16;
}
.dash-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.dash-line {
  width: 2rpx;
  background: #e6e6e6;
}

.section-header {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 24rpx;
  position: relative;
  padding-left: 20rpx;
}
.section-header::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  bottom: 8rpx;
  width: 8rpx;
  background: #FA8C16;
  border-radius: 4rpx;
}

.recipe-desc {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
}

/* 步骤条 */
.step-card {
  display: flex;
  margin-bottom: 30rpx;
}
.step-num {
  width: 48rpx;
  height: 48rpx;
  background: #333;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}
.step-info {
  flex: 1;
}
.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.step-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx; /* 增加底部间距，因为下方是元数据 */
}

/* 步骤元数据（时间、火候） */
.step-meta {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}
.step-time, .step-heat {
  display: inline-flex;
  align-items: center;
  font-size: 24rpx;
  color: #FA8C16;
  background: #fff7e6;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

/* 烹饪技巧 */
.tips-card {
  background: #f5f5f5;
  padding: 24rpx;
  border-radius: 16rpx;
}
.tip-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}
.tip-item:last-child {
  margin-bottom: 0;
}
.tip-dot {
  width: 12rpx;
  height: 12rpx;
  background: #FA8C16;
  border-radius: 50%;
  margin-top: 14rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}
.tip-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  flex: 1;
}

/* 营养分析 */
.nutrition-card {
  display: flex;
  flex-wrap: wrap;
  background: #f9f9f9;
  border-radius: 16rpx;
  padding: 24rpx;
}
.nutrition-item {
  width: 50%;
  display: flex;
  justify-content: space-between;
  padding: 12rpx 24rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}
.nutrition-item:nth-last-child(1),
.nutrition-item:nth-last-child(2) {
  border-bottom: none;
}
.nutrition-name {
  font-size: 28rpx;
  color: #666;
}
.nutrition-val {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}
