page {
  background: #fff;
}

/* --- Loading 蒙层 --- */
.loading-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: #fff;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading-content {
  text-align: center;
}
.loading-text {
  margin-top: 32rpx;
  font-size: 30rpx;
  color: #555;
  font-weight: 500;
  letter-spacing: 2rpx;
}
.custom-loading-icon {
  color: #FA8C16 !important; /* TDesign loading 颜色覆盖 */
}

/* --- 结果页 --- */
.recipe-header {
  position: relative;
  height: 500rpx;
}
.recipe-img {
  width: 100%;
  height: 100%;
}
.back-btn {
  position: absolute;
  top: env(safe-area-inset-top);
  left: 32rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
  padding: 10rpx;
  backdrop-filter: blur(10px);
  margin-top: 20rpx;
  z-index: 10;
}
.recipe-header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 32rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
  box-sizing: border-box;
}
.recipe-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}
.r-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(5px);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.recipe-body {
  padding: 40rpx 32rpx;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx; /* 稍微向上覆盖一点 */
  background: #fff;
  position: relative;
}

/* 仪表盘 */
.dashboard {
  display: flex;
  justify-content: space-around;
  background: #fffbf2;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #ffe8cc;
}
.dash-item {
  text-align: center;
}
.dash-val {
  font-size: 36rpx;
  font-weight: bold;
  color: #FA8C16;
}
.dash-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.dash-line {
  width: 2rpx;
  background: #e6e6e6;
}

.section-header {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 24rpx;
  position: relative;
  padding-left: 20rpx;
}
.section-header::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  bottom: 8rpx;
  width: 8rpx;
  background: #FA8C16;
  border-radius: 4rpx;
}

.recipe-desc {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
}

/* 步骤条 */
.step-card {
  display: flex;
  margin-bottom: 30rpx;
}
.step-num {
  width: 48rpx;
  height: 48rpx;
  background: #333;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}
.step-info {
  flex: 1;
}
.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.step-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
