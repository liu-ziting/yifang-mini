page {
  background: #f6f6f6;
}

.profile-header {
  position: relative;
  height: 520rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -2;
}

.header-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(246,246,246,1));
  z-index: -1;
}

.user-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding-bottom: 60rpx;
  box-sizing: border-box;
}

.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  padding: 0;
  background: none;
  border: 4rpx solid rgba(255,255,255,0.8);
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.2);
  margin-bottom: 24rpx;
  overflow: visible;
}

.avatar-wrapper::after {
  border: none;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit-hint {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 48rpx;
  height: 48rpx;
  background: #FA8C16;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid #fff;
}

.nickname-input {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  min-width: 200rpx;
  height: 60rpx;
}

.nickname-placeholder {
  color: rgba(0,0,0,0.5);
  font-weight: normal;
}

.container {
  padding: 0 32rpx 32rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 1;
}

.menu-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.menu-card {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.menu-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.card-icon-bg {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.card-info {
  flex: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.card-desc {
  font-size: 24rpx;
  color: #999;
}