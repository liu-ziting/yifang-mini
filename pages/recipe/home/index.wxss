/* --- 基础与背景 --- */
page {
  background: #f2f3f5;
  font-family: 'PingFang SC', system-ui;
}

.bg-layer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 50vh;
  z-index: 0;
}

.bg-image {
  width: 100%;
  height: 100%;
}

.bg-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(242,243,245, 1));
}

.container {
  position: relative;
  z-index: 1;
  padding: 0 32rpx;
}

/* --- Hero 区域 --- */
.hero-text {
  margin-bottom: 40rpx;
  margin-top: 20rpx;
}
.hero-title {
  font-size: 56rpx;
  font-weight: 800;
  color: #fff;
  text-shadow: 0 2rpx 10rpx rgba(0,0,0,0.2);
}
.hero-sub {
  font-size: 28rpx;
  color: rgba(255,255,255,0.9);
  margin-top: 10rpx;
}

/* --- 主卡片 --- */
.main-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 16rpx 40rpx rgba(0,0,0,0.08);
  /* 增加玻璃拟态的一点点质感，如果需要的话，但纯白更稳 */
}

.label {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

/* --- 输入框美化 --- */
.input-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.input-wrapper {
  flex: 1;
  background: #f7f8fa;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

/* 选中态 */
.input-wrapper:focus-within {
  background: #fff;
  border-color: #FA8C16;
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.1);
}

.add-btn-mini {
  width: 96rpx;
  height: 96rpx;
  background: #FA8C16;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(250, 140, 22, 0.2);
  flex-shrink: 0;
}
.add-btn-mini:active {
  transform: scale(0.95);
}

.custom-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}
.placeholder-style {
  color: #bbb;
}

/* --- 菜篮子区域 --- */
.basket-section {
  margin-bottom: 40rpx;
}
.section-title {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 16rpx;
  font-weight: 500;
}
.basket-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}
.basket-tag {
  background: #FA8C16;
  color: #fff;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(250, 140, 22, 0.3);
  animation: popIn 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}
@keyframes popIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

/* --- 快速选择弹窗 --- */
.quick-select-trigger {
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  padding: 20rpx;
}
.quick-select-trigger:active {
  opacity: 0.7;
}

.popup-container {
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
}
.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

/* 调整分类容器高度 */
.category-container {
  display: flex;
  height: 500rpx; /* 弹窗模式下稍微高一点 */
  background: #f9f9f9;
}

/* 左侧 Sidebar */
.category-sidebar {
  width: 180rpx;
  background: #f0f2f5;
  height: 100%;
}
.cat-tab {
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  border-left: 6rpx solid transparent;
  transition: all 0.2s;
}
.cat-tab.active {
  background: #fff;
  color: #FA8C16;
  font-weight: bold;
  border-left-color: #FA8C16;
}

/* 右侧 Content */
.category-content {
  flex: 1;
  background: #fff;
  padding: 24rpx;
  height: 100%;
  box-sizing: border-box;
}
.ing-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}
.ing-item {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 30rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.2s;
  display: flex;
  align-items: center;
}
.ing-item:active {
  background: #eee;
  transform: scale(0.98);
}

/* --- 菜系滚动/网格 --- */
.cuisine-scroll {
  white-space: nowrap;
  height: 180rpx;
  display: flex;
}

.cuisine-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding-bottom: 20rpx;
}

.cuisine-item {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 140rpx;
  height: 140rpx;
  background: #fff;
  border: 2rpx solid #f0f0f0;
  border-radius: 24rpx;
  /* margin-right: 24rpx; Removed for grid gap */
  transition: all 0.2s;
  box-sizing: border-box;
}

/* Grid specific override if needed, but gap handles it */
.cuisine-grid .cuisine-item {
  width: calc(25% - 15rpx); /* 4 items per row */
  margin-right: 0;
}

.cuisine-item.active {
  background: #fff7e6; /* 浅橙色背景 */
  border-color: #FA8C16;
  transform: scale(1.05);
  box-shadow: 0 8rpx 20rpx rgba(250, 140, 22, 0.2);
}

.cuisine-emoji {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}
.cuisine-name {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}
.cuisine-item.active .cuisine-name {
  color: #FA8C16;
  font-weight: bold;
}

/* --- 生成按钮 --- */
.action-area {
  margin-top: 60rpx;
}
.btn-group {
  display: flex;
  gap: 24rpx;
}

.generate-btn {
  background: linear-gradient(135deg, #FF7D00 0%, #FA8C16 100%);
  color: #fff;
  border-radius: 50rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 34rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(250, 140, 22, 0.4);
  border: none;
  width: 100%; /* Ensure full width in single button case */
}

.btn-secondary {
  background: #f2f3f5;
  color: #666;
  box-shadow: none;
  border: 2rpx solid #e8e8e8;
  flex: 1;
}

.btn-primary {
  flex: 2;
}

.btn-hover {
  transform: scale(0.98);
  opacity: 0.9;
}

/* --- 动画 --- */
@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10rpx); }
  to { opacity: 1; transform: translateY(0); }
}
.fade-in {
  animation: fadeIn 0.3s ease-out forwards;
}


/* --- Loading 蒙层 --- */
.loading-overlay {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(255,255,255,0.95);
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.loading-content {
  text-align: center;
}
.loading-text {
  margin-top: 32rpx;
  font-size: 30rpx;
  color: #555;
  font-weight: 500;
  letter-spacing: 2rpx;
}
.custom-loading-icon {
  color: #FA8C16 !important; /* TDesign loading 颜色覆盖 */
}

/* --- 结果页 --- */
.recipe-header {
  position: relative;
  height: 500rpx;
}
.recipe-img {
  width: 100%;
  height: 100%;
}
.close-btn {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
  padding: 10rpx;
  backdrop-filter: blur(10px);
}
.recipe-header-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 40rpx 32rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
  box-sizing: border-box;
}
.recipe-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 16rpx;
}
.r-tag {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  backdrop-filter: blur(5px);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.recipe-body {
  padding: 40rpx 32rpx;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -40rpx; /* 稍微向上覆盖一点 */
  background: #fff;
  position: relative;
}

/* 仪表盘 */
.dashboard {
  display: flex;
  justify-content: space-around;
  background: #fffbf2;
  padding: 30rpx;
  border-radius: 20rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #ffe8cc;
}
.dash-item {
  text-align: center;
}
.dash-val {
  font-size: 36rpx;
  font-weight: bold;
  color: #FA8C16;
}
.dash-label {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}
.dash-line {
  width: 2rpx;
  background: #e6e6e6;
}

.section-header {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0 24rpx;
  position: relative;
  padding-left: 20rpx;
}
.section-header::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  bottom: 8rpx;
  width: 8rpx;
  background: #FA8C16;
  border-radius: 4rpx;
}

.recipe-desc {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
}

/* 步骤条 */
.step-card {
  display: flex;
  margin-bottom: 30rpx;
}
.step-num {
  width: 48rpx;
  height: 48rpx;
  background: #333;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-right: 24rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}
.step-info {
  flex: 1;
}
.step-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}
.step-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}